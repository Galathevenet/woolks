<h1>This is the show for a walk before launching it</h1>

<h2><%= @walk.name %></h2>
<p><%= @walk.description %></p>
<p><%= @walk.length %></p>
<p><%= @walk.duration %></p>

<h2>REVIEWS</h2>

<% @walk.reviews.each do |review| %>
  <p><%= review.user.username %></p>
  <p><%= review.rating %></p>
  <p><%= review.comment %></p>
  <%= cl_image_tag("walk_one_1_cacmpw",
      width: 400, height: 300, crop: :fill) %>
<% end %>
