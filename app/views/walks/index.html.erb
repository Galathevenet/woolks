<div class="content-container">
  <div id="map"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <div>
    <h1>Choose your walk or create your own !</h1>
    <div>
    </div>
  </div>
  <div class="card-dispenser-slide">
    <%= link_to new_walk_path do %>
      <div class="card-add-walk">
        <p>+</p>
      </div>
    <% end %>
    <% @walks.select{ |walk| walk.published}.each do |walk| %>
      <%= link_to description_walk_path(walk) do %>
        <div class="card-walk">
          <h2><%= walk.name.capitalize %></h2>
          <img src="https://image.shutterstock.com/image-vector/small-map-city-260nw-770438665.jpg" alt="map">
          <div class="info">
            <div class="rating">
              <% if walk.reviews.size == 0 %>
                <p>Not rated yet</p>
              <% else %>
                <% walk.reviews_average.times do  %>
                  <span class="fa fa-star"></span>
                <% end %>
                <% (5 - walk.reviews_average).times do %>
                  <span class="fa-regular fa-star"></span>
                <% end %>
                <span>(<%= walk.reviews.size%>)</span>
              <% end %>
              <%# if walk.reviews_average == nil %>
                <%# <div class="rating-zero-hidden">
                  <span class="fa-regular fa-star"></span>
                  <span class="fa-regular fa-star"></span>
                  <span class="fa-regular fa-star"></span>
                  <span class="fa-regular fa-star"></span>
                  <span class="fa-regular fa-star"></span>
                </div> %>
              <%# elsif walk.reviews_average == 1 %>
                <%# <span class="fa fa-star"></span>
                <span class="fa-regular fa-star"></span>
                <span class="fa-regular fa-star"></span>
                <span class="fa-regular fa-star"></span>
                <span class="fa-regular fa-star"></span> %>
              <%# elsif walk.reviews_average == 2 %>
                <%# <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                <span class="fa-regular fa-star"></span>
                <span class="fa-regular fa-star"></span>
                <span class="fa-regular fa-star"></span> %>
              <%# elsif walk.reviews_average == 3 %>
                <%# <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                <span class="fa-regular fa-star"></span>
                <span class="fa-regular fa-star"></span> %>
              <%# elsif walk.reviews_average == 4 %>
                <%# <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                <span class="fa-regular fa-star"></span> %>
              <%# elsif walk.reviews_average == 5 %>
                <%# <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span> %>
              <%# end %>
            </div>
            <p><%= walk.description %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
